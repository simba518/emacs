# -*- mode: snippet -*-
# name: findlib
# key:findlib
# --
FIND_PATH(${1:Name}_INCLUDE_DIR  ${1:$(yas/substr text "[^: ]*")}/${1:$(yas/substr text "[^: ]*")}.h
PATHS
$ENV{PATH}/
/usr/include/
/usr/local/include/
)

FIND_LIBRARY( ${1:$(yas/substr text "[^: ]*")}_LIBRARY
NAMES lib${1:$(yas/substr text "[^: ]*")}.a
PATHS
$ENV{PATH}/${1:$(yas/substr text "[^: ]*")}
/usr/lib/${1:$(yas/substr text "[^: ]*")}
/usr/local/lib/${1:$(yas/substr text "[^: ]*")}
)
